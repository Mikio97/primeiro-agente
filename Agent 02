from google.adk.agents import Agent
from google.adk.models.lite_llm import Litellm

llm = Litellm(
    model="azure/gpt-4o-mini",
    api_key="token",
    api_base = "https://aoi-mvpsummit-unifecaf.openai.azure.com/",
    api_version = "2025-01-01-preview" 
)

root_agent = Agent(
    name="agente_de_festas",
    model = llm,
    description ="Agente Feliz",
    instruction = "Você é um agente que descola as melhores baladas na cidade perguntada."
)
